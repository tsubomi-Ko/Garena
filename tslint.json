{
    "linterOptions": {
        "exclude": [
            "src/**/*",
            "node_modules/**/*.ts",
            "node_modules/**/*.tsx",
            "*.d.ts"
        ]
    },
    "rules": {
        "indent": [
            true,
            "spaces",
            4
        ],
        "no-trailing-whitespace": true,
        "prefer-const": true,
        "no-var-keyword": true
    }
}